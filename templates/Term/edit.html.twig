{% extends 'Base/base.html.twig' %}

{% import 'Base/helper.html.twig' as helper %}

{% block body %}
    <h2>
        {% if entity.id is empty %}
        {{ 'Add Subject Heading'|trans }}
        {% else %}
        <a href="{{ path('term-detail', { 'id' : entity.id }) }}">
            {{ entity.localizedName(app.request.locale, '_') }}
        </a>
        {% endif %}
    </h2>
    {{ helper.display_flashes() }}

    {# renders all fields *and* the form start and end tags #}
    {{ form(form) }}
{% endblock %}