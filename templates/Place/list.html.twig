{% extends 'Base/base.html.twig' %}

{% import 'Base/helper.html.twig' as helper %}

{% block body %}
    <h2>{{ 'Places'|trans }}</h2>
    {{ helper.display_flashes() }}

    <form method="POST"><input name="q" value="{{ q }}" /><input type="submit" value="{{ 'Search'|trans }}" /></form>
    <a href="{{ path('place-add-from-identifier') }}" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-plus"></span> Add from Identifier
    </a>
    <ul>
        {% for place in places.data %}
            <li>
                <a href="{{ path('place-detail', { id: place.id }) }}">
                    {{ place.name -}}
                </a> {% if place.additionalType is not empty %}({{ place.additionalType }}){% endif %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}