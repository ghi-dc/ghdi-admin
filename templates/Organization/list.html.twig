{% extends 'Base/base.html.twig' %}

{% import 'Base/helper.html.twig' as helper %}

{% block body %}
    <h2>{{ 'Organizations'|trans }}</h2>
    {{ helper.display_flashes() }}

    <form method="POST"><input name="q" value="{{ q }}" /><input type="submit" value="{{ 'Search'|trans }}" /></form>
    <a href="{{ path('organization-add-from-identifier') }}" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-plus"></span> {{ 'Add from Identifier'|trans }}
    </a>
    <a href="{{ path('organization-import-missing') }}" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-plus"></span> {{ 'Add missing'|trans }}
    </a>
    <ul>
        {% for organization in organizations.data %}
            <li>
                <a href="{{ path('organization-detail', { id: organization.id }) }}">
                    {{ organization.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}